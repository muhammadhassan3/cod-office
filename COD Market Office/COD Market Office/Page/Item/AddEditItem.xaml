<Window x:Class="COD_Market_Office.Page.Item.AddEditItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COD_Market_Office.Page.Item"
        mc:Ignorable="d"
        Title="AddEditItem" Height="auto" Width="400" SizeToContent="Height" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Stretch="Uniform" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="150"/>
        <Button x:Name="btnSelect" Content="Pilih File" HorizontalAlignment="Left" Click="btnSelectClicked" Grid.Column="0" Grid.Row="1"/>
        <Label Content="Size" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" x:Name="lblSize" VerticalAlignment="Center"/>
        <Label Content="Kategori" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Kategori" Grid.Row="2" Grid.Column="1" x:Name="lblKat"/>
        <Label Content="Merek" Grid.Row="3" Grid.Column="0"/>
        <Label Content="Merek" Grid.Row="3" Grid.Column="1" x:Name="lblMerek"/>
        <Label Content="Nama" Grid.Row="4" Grid.Column="0"/>
        <TextBox x:Name="tbName" Grid.Row="4" Grid.Column="1" Margin="0 2 0 0"/>
        <Label Content="Barcode" Grid.Row="5" Grid.Column="0"/>
        <TextBox x:Name="tbBarcode" Grid.Row="5" Grid.Column="1" Margin="0 2 0 0"/>
        <Label Content="Ppn(%)" Grid.Row="6" Grid.Column="0"/>
        <TextBox x:Name="tbPPN" Grid.Row="6" Grid.Column="1" Margin="0 2 0 0"/>
        <CheckBox Content="Tampil" x:Name="cbVisible" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="0 4 0 4" HorizontalAlignment="Center"/>
        <Button x:Name="btnSave" Click="btnSaveClicked" Content="Simpan" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
